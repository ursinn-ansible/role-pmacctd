! pmacctd configuration
!
!
!
daemonize: true
pidfile: /var/run/pmacctd.pid
syslog: daemon
!
pcap_interfaces_map: /etc/pmacct/interfaces.map
pre_tag_map: /etc/pmacct/pretag.map
pmacctd_as: bgp
pmacctd_net: bgp
sampling_rate: 1
bgp_peer_src_as_type: bgp
aggregate: src_host, dst_host, src_as, dst_as, peer_src_ip, peer_dst_ip, peer_src_as, peer_dst_as, label
!
bgp_daemon: true
bgp_daemon_ip: 127.0.0.2
bgp_daemon_port: 180
bgp_daemon_max_peers: 1
bgp_agent_map: /etc/pmacct/peering_agent.map
bgp_peer_src_as_map: /etc/pmacct/peers.map
bgp_peer_src_as_type: map
!
plugins: kafka
kafka_output: json
kafka_broker_host: {{ app_pmacctd_kafka_broker_host }}
kafka_topic: pmacct.acct
kafka_refresh_time: 5
kafka_history: 5m
kafka_history_roundoff: m
